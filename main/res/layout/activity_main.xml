<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background_stone"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dice_image"
        android:layout_width="173dp"
        android:layout_height="193dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="280dp"
        android:baselineAligned="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/four_die_1" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="236dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="279dp"
        android:adjustViewBounds="true"
        android:baselineAligned="true"
        app:layout_constraintBottom_toTopOf="@+id/dice_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_reforge" />

    <TextView
        android:id="@+id/Health"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Health"
        android:textAlignment="center"
        android:textColor="#F8F5F5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:layout_editor_absoluteX="165dp" />

    <TextView
        android:id="@+id/Forge_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forge Level"
        android:textColor="#F8F2F2"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/Attack_Die"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack Die"
        android:textColor="#F6F1F1"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="389dp" />

</androidx.constraintlayout.widget.ConstraintLayout>